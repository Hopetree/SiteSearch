{
    "manifest_version": 3,
    "name": "站外搜索助手",
    "version": "1.0",
    "description": "在任何网站上使用搜索引擎搜索该站点的内容。",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}